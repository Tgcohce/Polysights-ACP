# ACP Polymarket Trading Agent Configuration
# Copy this file to .env and fill in your specific values

# Database Configuration
DATABASE_USER=postgres
DATABASE_PASSWORD=password
DATABASE_HOST=db
DATABASE_PORT=5432
DATABASE_NAME=acp_agent
DATABASE_ECHO=false
DEVELOPMENT_MODE=false

# ACP Agent Configuration
ACP_AGENT_ID=your-agent-id
ACP_AGENT_NAME=Your Agent Name
ACP_SERVICE_REGISTRY=https://registry.acp-protocol.org

# Blockchain/Wallet Configuration
WALLET_PRIVATE_KEY=your-private-key  # Keep this secret!
VIRTUAL_TOKEN_ADDRESS=0x0000000000000000000000000000000000000000
CHAIN_ID=1  # 1 for Ethereum Mainnet, 137 for Polygon

# Polymarket API Configuration
POLYMARKET_API_URL=https://clob.polymarket.com
POLYMARKET_API_KEY=your-polymarket-api-key
POLYMARKET_WEBSOCKET_URL=wss://clob-ws.polymarket.com

# Polysights API Configuration
POLYSIGHTS_API_URL=https://api.polysights.xyz/v1
POLYSIGHTS_API_KEY=your-polysights-api-key

# Monitoring Configuration
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
ENABLE_SLACK_ALERTS=false
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url

# PgAdmin Configuration (for development)
PGADMIN_EMAIL=admin@acp-agent.com
PGADMIN_PASSWORD=admin
