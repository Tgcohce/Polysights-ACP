# PRODUCTION ENVIRONMENT CONFIGURATION
# Copy this to .env.production and fill in real values

# =============================================================================
# POLYMARKET API CREDENTIALS
# Get these from: https://clob.polymarket.com/
# =============================================================================
POLYMARKET_API_KEY=your_actual_polymarket_api_key_here
POLYMARKET_SECRET=your_actual_polymarket_secret_here
POLYMARKET_PASSPHRASE=your_actual_polymarket_passphrase_here
POLYMARKET_BASE_URL=https://clob.polymarket.com
POLYMARKET_WEBSOCKET_URL=wss://clob.polymarket.com/ws

# =============================================================================
# POLYSIGHTS API CREDENTIALS  
# Get these from: https://app.polysights.xyz/
# =============================================================================
POLYSIGHTS_API_KEY=your_polysights_api_key_here
POLYSIGHTS_BASE_URL=https://app.polysights.xyz/api

# =============================================================================
# BLOCKCHAIN & WALLET CONFIGURATION
# =============================================================================
# Base Network RPC - Get from Alchemy/Infura/QuickNode
BASE_RPC_URL=https://base-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_KEY
BASE_TESTNET_RPC_URL=https://base-goerli.g.alchemy.com/v2/YOUR_ALCHEMY_KEY

# CRITICAL: Your actual wallet private key (KEEP SECURE!)
# Generate a new wallet specifically for this agent
WHITELISTED_WALLET_PRIVATE_KEY=0xYOUR_ACTUAL_64_CHARACTER_PRIVATE_KEY_HERE

# Token and contract addresses
VIRTUAL_TOKEN_ADDRESS=0x0b3e328455c4059eeb9e3f84b5543f74e24e7e1b
ERC6551_REGISTRY_ADDRESS=0x000000006551c19487814612e58FE06813775758

# =============================================================================
# VIRTUALS PLATFORM CREDENTIALS
# Get these from: https://app.virtuals.io/
# =============================================================================
VIRTUALS_API_URL=https://api.virtuals.io
VIRTUALS_API_KEY=your_virtuals_platform_api_key_here
ACP_SERVICE_REGISTRY_URL=https://app.virtuals.io/acp

# Agent identification
AGENT_ID=your_unique_agent_id_here
AGENT_NAME=ACP-Polymarket-Trading-Agent
AGENT_VERSION=1.0.0

# =============================================================================
# PRODUCTION DATABASE
# Use PostgreSQL for production (not SQLite)
# =============================================================================
DATABASE_URL=postgresql://username:password@host:5432/acp_polymarket_prod
DATABASE_TEST_URL=postgresql://username:password@host:5432/acp_polymarket_test

# Database connection pool settings
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20
DATABASE_POOL_TIMEOUT=30

# =============================================================================
# MONITORING & ALERTING
# =============================================================================
# Sentry for error tracking
SENTRY_DSN=https://your_sentry_key@sentry.io/project_id

# Discord webhook for alerts
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your_webhook_here

# Slack webhook for alerts  
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your_slack_webhook_here

# Log level for production
LOG_LEVEL=INFO
LOG_FILE=/var/log/acp-polymarket-agent/app.log

# =============================================================================
# FINANCIAL SAFETY LIMITS
# =============================================================================
# Maximum position size in USD
MAX_POSITION_SIZE=100.00

# Maximum daily loss limit in USD
MAX_DAILY_LOSS=500.00

# Maximum portfolio risk percentage (0.02 = 2%)
MAX_PORTFOLIO_RISK=0.02

# Stop loss percentage (0.05 = 5%)
STOP_LOSS_PERCENTAGE=0.05

# Take profit percentage (0.15 = 15%)
TAKE_PROFIT_PERCENTAGE=0.15

# Trading fee percentage (0.02 = 2%)
TRADING_FEE_PERCENTAGE=0.02

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# Enable production mode
PRODUCTION_MODE=true

# API rate limiting
API_RATE_LIMIT=100
API_RATE_WINDOW=60

# Session timeout in seconds
SESSION_TIMEOUT=3600

# Enable HTTPS only
FORCE_HTTPS=true

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================
# Maximum concurrent jobs
MAX_CONCURRENT_JOBS=5

# Job timeout in seconds
JOB_TIMEOUT=300

# WebSocket connection timeout
WEBSOCKET_TIMEOUT=30

# HTTP request timeout
HTTP_TIMEOUT=10
